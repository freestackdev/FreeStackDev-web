{
  "name": "ghibli-portfolio",
  "private": true,
  "version": "1.0.0",
  "description": "A stunning Ghibli-inspired developer portfolio with modern React and beautiful animations",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "cross-env NODE_ENV=production vite build",
    "build:analyze": "cross-env NODE_ENV=production ANALYZE=true vite build",
    "build:sourcemaps": "cross-env NODE_ENV=production GENERATE_SOURCEMAP=true vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test:build": "npm run build && npm run preview",
    "predeploy": "npm run lint && npm run typecheck && npm run build",
    "preview": "vite preview"
  },
  "keywords": [
    "portfolio",
    "react",
    "ghibli",
    "developer",
    "framer-motion",
    "tailwindcss"
  ],
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@types/node": "^22.8.1",
    "framer-motion": "^11.11.9",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-google-recaptcha": "^3.1.0",
    "react-intersection-observer": "^9.13.1",
    "react-router-dom": "^6.22.3",
    "react-syntax-highlighter": "^15.6.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@sentry/vite-plugin": "^4.3.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "cross-env": "^10.0.0",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "terser": "^5.44.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vite-bundle-analyzer": "^1.2.3",
    "vite-plugin-eslint": "^1.8.1"
  }
}
